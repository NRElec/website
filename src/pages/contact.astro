---
import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/ContactForm.astro';

const title = "Contact - NRElec";
const description = "Contactez NRElec pour tous vos projets d'électricité à Tulle, Brive et ses environs. Devis gratuit et conseil personnalisé.";
---

<Layout title={title} description={description}>
  <section class="pt-32 pb-16">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl font-bold text-center text-dark mb-12">Contactez-nous</h1>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 max-w-6xl mx-auto">
        <div>
          <ContactForm />
        </div>
        
        <div class="space-y-8">
          <div class="bg-white p-8 rounded-lg shadow-lg border-2 border-primary">
            <h2 class="text-2xl font-bold mb-6 text-dark">Informations</h2>
            
            <div class="space-y-4">
              <div class="flex items-start">
                <svg class="w-6 h-6 text-primary mr-3 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
                <div>
                  <h3 class="font-semibold text-dark">Adresse</h3>
                  <p class="text-gray-600">NRElec 2 le pont, 19150 Cornil</p>
                </div>
              </div>
              
              <div class="flex items-start">
                <svg class="w-6 h-6 text-primary mr-3 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
                <div>
                  <h3 class="font-semibold text-dark">Email</h3>
                  <p class="text-gray-600">remi@nrelec.com</p>
                </div>
              </div>
              
              <div class="flex items-start">
                <svg class="w-6 h-6 text-primary mr-3 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                </svg>
                <div>
                  <h3 class="font-semibold text-dark">Téléphone</h3>
                  <p class="text-gray-600">06 42 88 73 81</p>
                </div>
              </div>
              
              <div class="flex items-start">
                <svg class="w-6 h-6 text-primary mr-3 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <div>
                  <h3 class="font-semibold text-dark">Horaires</h3>
                  <p class="text-gray-600">Lundi - Vendredi : 8h - 18h</p>
                  <p class="text-gray-600">Service d'urgence disponible</p>
                </div>
              </div>
            </div>
          </div>

          <div class="h-[400px] rounded-lg overflow-hidden shadow-lg">
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d179875.95324368216!2d1.5172930743314486!3d45.216202738947416!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47f88de35e42be6b%3A0xca011471a6cd3e20!2sLe%20Pont%2C%2019150%20Cornil!5e0!3m2!1sfr!2sfr!4v1744571962889!5m2!1sfr!2sfr"
              width="100%"
              height="100%"
              style="border:0;"
              allowfullscreen=""
              loading="lazy">
            </iframe>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>