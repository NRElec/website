---
import Layout from '../layouts/Layout.astro';
import ProjectSlider from '../components/ProjectSlider.astro';
import ContactForm from '../components/ContactForm.astro';

const projects = await Astro.glob('../content/projects/*.md');
---

<Layout title="NRElec - Électricien aux alentours de Tulle et Brive">
  <!-- Hero Section -->
  <section class="pt-32 pb-16 bg-gradient-to-br from-white to-gray-100">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-bold text-dark mb-6">
          Votre électricien de confiance aux alentours de Tulle et Brive
        </h1>
        <p class="text-xl text-gray-600 mb-8">
          Expertise et professionnalisme pour tous vos projets électriques
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          <a href="#contact" class="bg-primary text-dark font-semibold px-8 py-3 rounded-lg hover:bg-secondary transition-colors">
            Demander un devis
          </a>
          <a href="#services" class="bg-dark text-white px-8 py-3 rounded-lg hover:bg-gray-800 transition-colors">
            Nos services
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section id="services" class="py-16">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-12 text-dark">Nos Services</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="bg-white p-8 rounded-lg shadow-lg border-2 border-primary hover:border-secondary transition-colors">
          <h3 class="text-xl font-bold mb-4 text-dark">Rénovation Électrique</h3>
          <p class="text-gray-600">
            Mise aux normes de votre installation électrique, remplacement de tableau électrique,
            modernisation de votre système.
          </p>
        </div>
        <div class="bg-white p-8 rounded-lg shadow-lg border-2 border-primary hover:border-secondary transition-colors">
          <h3 class="text-xl font-bold mb-4 text-dark">Dépannage</h3>
          <p class="text-gray-600">
            Intervention rapide pour tout type de panne électrique. Service d'urgence disponible
            pour votre sécurité.
          </p>
        </div>
        <div class="bg-white p-8 rounded-lg shadow-lg border-2 border-primary hover:border-secondary transition-colors">
          <h3 class="text-xl font-bold mb-4 text-dark">Autres Services</h3>
          <p class="text-gray-600">
            Installation et maintenance de VMC, climatisation, bornes de recharge véhicules électriques. 
            Rénovation de salles de bain et travaux de plomberie. Solutions complètes pour votre confort.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Projects Section -->
  <section id="realisations" class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-12 text-dark">Nos Réalisations</h2>
      <ProjectSlider projects={projects} />
    </div>
  </section>

  <!-- Contact Section -->
  <section id="contact" class="py-16">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-12 text-dark">Contactez-nous</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
        <div>
          <ContactForm />
        </div>
        <div>
          <div class="bg-white p-8 rounded-lg shadow-lg border-2 border-primary mb-8">
            <h3 class="text-xl font-bold mb-4 text-dark">Coordonnées</h3>
            <p class="mb-2 text-gray-600">Adresse : Tulle, France</p>
            <p class="mb-2 text-gray-600">Email : contact@nrelec.fr</p>
            <p class="mb-2 text-gray-600">Téléphone : XX XX XX XX XX</p>
          </div>
          <div class="h-[400px] rounded-lg overflow-hidden shadow-lg">
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d22436.772707516386!2d1.7377777!3d45.2377777!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47f8c1f1f1f1f1f1%3A0x1f1f1f1f1f1f1f1!2sTulle%2C%20France!5e0!3m2!1sfr!2sfr!4v1620000000000!5m2!1sfr!2sfr"
              width="100%"
              height="100%"
              style="border:0;"
              allowfullscreen=""
              loading="lazy">
            </iframe>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>