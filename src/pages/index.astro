---
import Layout from '../layouts/Layout.astro';
import ProjectSlider from '../components/ProjectSlider.astro';
import ContactForm from '../components/ContactForm.astro';
import {getCollection} from "astro:content";

const projects = await getCollection('projects');

const title = "Électricien à Tulle, Brive et ses alentours | NRElec - Installation et Dépannage";
const description = "Intervention rapide pour tous vos travaux d'électricité : installation, rénovation, dépannage. Devis gratuit.";

---

<Layout title={title} description={description}>
  <!-- Hero Section -->
  <section class="pt-32 pb-16 bg-gradient-to-br from-white to-gray-100">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-bold text-dark mb-6">
          Votre électricien de confiance à Tulle, Brive et ses environs
        </h1>
        <p class="text-xl text-gray-600 mb-8">
            Installation, rénovation et dépannage électrique 7j/7 dans toute la Corrèze.
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          <a href="/contact" class="bg-primary text-dark font-semibold px-8 py-3 rounded-lg hover:bg-secondary transition-colors">
            Demander un devis
          </a>
          <a href="#services" class="bg-dark text-white px-8 py-3 rounded-lg hover:bg-gray-800 transition-colors">
            Nos services
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section id="services" class="py-16">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-12 text-dark">Nos Services</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="bg-white p-8 rounded-lg shadow-lg border-2 border-primary hover:border-secondary transition-colors">
          <h3 class="text-xl font-bold mb-4 text-dark">Rénovation Électrique</h3>
          <p class="text-gray-600">
            Mise aux normes de votre installation électrique, remplacement de tableau électrique,
            modernisation de votre système.
          </p>
        </div>
        <div class="bg-white p-8 rounded-lg shadow-lg border-2 border-primary hover:border-secondary transition-colors">
          <h3 class="text-xl font-bold mb-4 text-dark">Dépannage</h3>
          <p class="text-gray-600">
            Intervention rapide pour tout type de panne électrique. Service d'urgence disponible
            pour votre sécurité.
          </p>
        </div>
        <div class="bg-white p-8 rounded-lg shadow-lg border-2 border-primary hover:border-secondary transition-colors">
          <h3 class="text-xl font-bold mb-4 text-dark">Autres Services</h3>
          <p class="text-gray-600">
            Installation et maintenance de VMC, climatisation, bornes de recharge véhicules électriques. 
            Rénovation de salles de bain et travaux de plomberie.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Projects Section -->
  <section id="realisations" class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-12 text-dark">Nos Réalisations</h2>
      <ProjectSlider projects={projects} />
    </div>
  </section>

  <!-- Contact Section -->
  <section id="contact" class="py-16">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-12 text-dark">Contactez-nous</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
        <div>
          <ContactForm />
        </div>
        <div>
          <div class="bg-white p-8 rounded-lg shadow-lg border-2 border-primary mb-8">
            <h3 class="text-xl font-bold mb-4 text-dark">Coordonnées</h3>
            <p class="mb-2 text-gray-600">Adresse : NRElec 2 le pont, 19150 Cornil</p>
            <p class="mb-2 text-gray-600">Email : remi@nrelec.com</p>
            <p class="mb-2 text-gray-600">Téléphone : 06 42 88 73 81</p>
          </div>
          <div class="h-[400px] rounded-lg overflow-hidden shadow-lg">
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d179875.95324368216!2d1.5172930743314486!3d45.216202738947416!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47f88de35e42be6b%3A0xca011471a6cd3e20!2sLe%20Pont%2C%2019150%20Cornil!5e0!3m2!1sfr!2sfr!4v1744571962889!5m2!1sfr!2sfr"
              width="100%"
              height="100%"
              style="border:0;"
              allowfullscreen=""
              loading="lazy">
            </iframe>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>