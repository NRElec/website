---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const projects = await getCollection('projects');
const title = "Nos Réalisations - NRElec";
const description = "Découvrez nos projets d'installation et de rénovation électrique réalisés dans la région de Tulle et Brive.";
---

<Layout title={title} description={description}>
  <section class="pt-32 pb-16">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl font-bold text-center text-dark mb-12">Nos Réalisations</h1>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {projects.map((project) => (
          <a href={`/projects/${project.slug}`} class="block group">
            <div class="bg-white rounded-lg shadow-lg overflow-hidden">
              <div class="relative">
                <img
                  src={project.data.image}
                  alt={project.data.title}
                  class="w-full h-64 object-cover"
                />
                <div class="absolute inset-0 bg-black/60 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                  <div class="absolute inset-0 flex items-center justify-center">
                    <span class="text-white text-lg font-semibold">Voir le projet</span>
                  </div>
                </div>
              </div>
              <div class="p-6">
                <h2 class="text-xl font-bold text-dark mb-2">{project.data.title}</h2>
                <p class="text-gray-600 line-clamp-2">{project.data.description}</p>
                <p class="text-sm text-gray-500 mt-4">{project.data.date}</p>
              </div>
            </div>
          </a>
        ))}
      </div>

      <div class="mt-12 text-center">
        <a 
          href="/contact" 
          class="bg-primary text-dark font-semibold px-8 py-3 rounded-lg hover:bg-secondary transition-colors inline-block"
        >
          Demander un devis
        </a>
      </div>
    </div>
  </section>
</Layout>