---
import 'swiper/css';
import 'swiper/css/navigation';
import 'swiper/css/pagination';

const { projects } = Astro.props;
---

<div class="project-slider">
    <div class="swiper">
        <div class="swiper-wrapper">
          {projects.map((project) => (
                  <div class="swiper-slide">
                      <a href={`/projects/${project.slug}`} class="block">
                          <div class="relative group">
                              <img
                                      src={project.data.image}
                                      alt={project.data.title}
                                      class="w-full h-[400px] object-cover rounded-lg"
                              />
                              <div class="absolute inset-0 bg-black/60 opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-lg">
                                  <div class="absolute inset-0 p-6 text-white">
                                      <h3 class="text-2xl font-bold mb-4">{project.data.title}</h3>
                                      <p>{project.data.description}</p>
                                  </div>
                              </div>
                          </div>
                      </a>
                  </div>
          ))}
        </div>
        <div class="swiper-pagination"></div>
        <div class="swiper-button-prev"></div>
        <div class="swiper-button-next"></div>
    </div>
</div>

<script>
  import Swiper from 'swiper';
  import { Navigation, Pagination, Autoplay } from 'swiper/modules';

  new Swiper('.project-slider .swiper', {
    modules: [Navigation, Pagination, Autoplay],
    slidesPerView: 1,
    spaceBetween: 30,
    loop: true,
    autoplay: {
      delay: 5000,
    },
    pagination: {
      el: '.swiper-pagination',
      clickable: true,
    },
    navigation: {
      nextEl: '.swiper-button-next',
      prevEl: '.swiper-button-prev',
    },
    breakpoints: {
      640: {
        slidesPerView: 2,
      },
      1024: {
        slidesPerView: 3,
      },
    },
  });
</script>