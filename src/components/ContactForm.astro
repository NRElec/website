<form class="bg-white p-8 rounded-lg shadow-lg border-2 border-primary" name="contact" data-netlify="true">
  <div class="mb-6">
    <label for="name" class="block text-dark mb-2">Nom</label>
    <input
      type="text"
      id="name"
      name="name"
      required
      class="w-full px-4 py-2 border-2 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary"
    />
  </div>
  
  <div class="mb-6">
    <label for="email" class="block text-dark mb-2">Email</label>
    <input
      type="email"
      id="email"
      name="email"
      required
      class="w-full px-4 py-2 border-2 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary"
    />
  </div>
  
  <div class="mb-6">
    <label for="phone" class="block text-dark mb-2">Téléphone</label>
    <input
      type="tel"
      id="phone"
      name="phone"
      required
      class="w-full px-4 py-2 border-2 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary"
    />
  </div>
  
  <div class="mb-6">
    <label for="message" class="block text-dark mb-2">Message</label>
    <textarea
      id="message"
      name="message"
      rows="4"
      required
      class="w-full px-4 py-2 border-2 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary"
    ></textarea>
  </div>
  
  <button
    type="submit"
    class="w-full bg-primary text-dark font-semibold px-6 py-3 rounded-lg hover:bg-secondary transition-colors"
  >
    Envoyer
  </button>
</form>